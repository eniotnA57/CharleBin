<?xml version="1.0"?>
<ruleset name="CustomPHPCS">
    <description>Configuration personnalisée pour PHP_CodeSniffer</description>

    <!-- Utilisation de la norme PSR-12 -->
    <rule ref="PSR12"/>

    <!-- Exclure le dossier vendor -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Règle pour supprimer les espaces en fin de ligne -->
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="true"/>
        </properties>
    </rule>
</ruleset>
